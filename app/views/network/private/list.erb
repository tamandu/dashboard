<h4>Network List</h4>
<p>
  <a href="/network/private/new" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create Network</a>
</p>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Network Address</th>
      <th>Subnet Mask</th>
      <th>VLAN ID</th>
      <th>Comment</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% networks.each do |network| %>
    <tr>
      <td><%= network[:network_address] %></td>
      <td><%= network[:subnet_mask] %></td>
      <td><%= network[:vlan_id] %></td>
      <td><%= network[:comment] %></td>
      <td>
        <a href="/network/private/<%= network[:id] %>/edit" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit</a>
        <a href="/network/private/<%= network[:id] %>/ip" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-list" aria-hidden="true"></span> IP list</a>
        <form style="display:inline;" method="post" action="/network/private/<%= network[:id] %>">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-danger btn-xs" onclick="return confirm('<%= network[:network_address] %> gonna be deleted, are you sure?')"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete</button>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
