<h4>New Network Address</h4>
<br>
<div class="col-lg-6">
  <% unless errors.nil? %>
    <div class="alert alert-danger" role="alert">
      <% errors.each do |k, v| %>
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span><%= v.first %><br>
      <% end %>
    </div>
  <% end %>
  <form class="form" role="form" method="post" action="/network/private">
    <div class="form-group">
      <label for="network_address">Network Address</label>
      <input type="text" class="form-control" name="network_address">
    </div>
    <div class="form-group">
      <label for="subnet_mask">Subnet Mask</label>
      <input type="text" class="form-control" name="subnet_mask">
    </div>
    <div class="form-group">
      <label for="vlan_id">VLAN ID</label>
      <input type="text" class="form-control" name="vlan_id">
    </div>
    <div class="form-group">
      <label for="comment">Comment</label>
      <input type="text" class="form-control" name="comment">
    </div>
    <br>
    <a href="/network/private" class="btn btn-default btn-sm">Cancel</a>
    <button type="submit" class="btn btn-primary btn-sm">Create</button>
  </form>
</div>