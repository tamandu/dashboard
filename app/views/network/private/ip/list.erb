<h4><%= network.prefix %></h4>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>IP Address</th>
      <th>Hostname</th>
      <th>Comment</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% ip_list.each_with_index do |ip, i| %>
      <% if i == 0 || i == (ip_list.count - 1) %>
        <tr>
          <td><%= ip[:ip_address] %></td>
          <td><%= ip[:hostname] %></td>
          <td><%= ip[:comment] %></td>
          <td>
            <a href="/network/private/<%= network.id %>/ip/<%= ip[:id] %>/edit" class="btn btn-default btn-xs disabled"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit</a>
          </td>
        </tr>
      <% else %>
        <tr>
          <td><%= ip[:ip_address] %></td>
          <td><%= ip[:hostname] %></td>
          <td><%= ip[:comment] %></td>
          <td>
            <a href="/network/private/<%= network.id %>/ip/<%= ip[:id] %>/edit" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit</a>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>