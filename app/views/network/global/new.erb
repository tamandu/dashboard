<h4>Register Global IP Address</h4>
<br>
<div class="col-lg-6">
  <% unless errors.nil? %>
    <div class="alert alert-danger" role="alert">
      <% errors.each do |k, v| %>
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span><%= v.first %><br>
      <% end %>
    </div>
  <% end %>
  <form class="form" role="form" method="post" action="/network/global">
    <div class="form-group">
      <label for="global_ip">Global IP Address</label>
      <input type="text" class="form-control" name="global_ip">
    </div>
    <div class="form-group">
      <label for="mapped_ip">Mapped IP Address</label>
      <input type="text" class="form-control" name="mapped_ip">
    </div>
    <div class="form-group">
      <label for="hostname">Hostname</label>
      <input type="text" class="form-control" name="hostname">
    </div>
    <div class="form-group">
      <label for="comment">Comment</label>
      <input type="text" class="form-control" name="comment">
    </div>
    <br>
    <a href="/network/global" class="btn btn-default btn-sm">Cancel</a>
    <button type="submit" class="btn btn-primary btn-sm">Create</button>
  </form>
</div>