<h4>Global IP Address List</h4>
<p>
  <a href="/network/global/new" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Register Global IP Address</a>
</p>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Global IP Address</th>
      <th>Mapped IP Address</th>
      <th>Hostname</th>
      <th>Comment</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% global_ips.each do |global_ip| %>
    <tr>
      <td><%= global_ip[:global_ip] %></td>
      <td><%= global_ip[:mapped_ip] %></td>
      <td><%= global_ip[:hostname] %></td>
      <td><%= global_ip[:comment] %></td>
      <td>
        <a href="/network/global/<%= global_ip[:id] %>/edit" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit</a>
        <form style="display:inline;" method="post" action="/network/global/<%= global_ip[:id] %>">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-danger btn-xs" onclick="return confirm('<%= global_ip[:global_ip] %> gonna be deleted, are you sure?')"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete</button>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>